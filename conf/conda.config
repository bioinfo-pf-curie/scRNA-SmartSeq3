conda {
  cacheDir = "${params.condaCacheDir}"
}

process {
  withLabel:multiqc { conda = "${baseDir}/environment.yml" }
  withLabel:python { conda = "${baseDir}/environment.yml" }
  withLabel:umiTools { conda = "${baseDir}/environment.yml" }
  withLabel:seqkit { conda = "${baseDir}/environment.yml" }
  withLabel:cutadapt { conda = "${baseDir}/environment.yml" }
  withLabel:STAR { conda = "${baseDir}/environment.yml" }
  withLabel:featureCounts { conda = "${baseDir}/environment.yml" }
  withLabel:samtools { conda = "${baseDir}/environment.yml" }
  withLabel:deeptools { conda = "${baseDir}/environment.yml" }
  withLabel:rseqc { conda = "${baseDir}/environment.yml" }
  withLabel:R { conda = "${baseDir}/environment.yml" }
}

# getTaggedSeq / mergeReads / -> seqkit
# umiExtraction / countMatrices -> umiTools
# trimReads -> cutadapt
# readAlignment -> STAR
# readsAssignment -> featureCounts
# sortBam / separateReads -> samtools
# bigWig -> deeptools
# genebody_coverage -> rseqc
# umiPerGeneDist / countUMIGenePerCell / cellAnalysis -> R
